<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    android:label="Edit Task"
    app:startDestination="@id/taskFragment">

    <fragment
        android:id="@+id/taskFragment"
        android:name="com.gmail.ngampiosauvet.task.ui.tasks.TaskFragment"
        android:label="Task"
        tools:layout="@layout/fragment_task">
        <action
            android:id="@+id/action_taskFragment_to_taskDetailFragment"
            app:destination="@id/taskDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/addEditFragment"
        android:name="com.gmail.ngampiosauvet.task.ui.addTask.AddFragment"
        android:label="fragment_add_edit"
        tools:layout="@layout/fragment_add" />
    <fragment
        android:id="@+id/taskDetailFragment"
        android:name="com.gmail.ngampiosauvet.task.ui.taskDetail.TaskDetailFragment"
        android:label="Edit Task"
        tools:layout="@layout/fragment_task_detail">
        <argument
            android:name="task_id"
            app:argType="integer" />
        <action
            android:id="@+id/action_taskDetailFragment_to_taskFragment"
            app:destination="@id/taskFragment"
            app:popUpTo="@id/taskFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/createAccountFragment"
        android:name="com.gmail.ngampiosauvet.task.ui.login.CreateAccountFragment"
        android:label="fragment_create_account"
        tools:layout="@layout/fragment_create_account">
        <action
            android:id="@+id/action_createAccountFragment_to_taskFragment"
            app:destination="@id/taskFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.gmail.ngampiosauvet.task.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_taskFragment"
            app:destination="@id/taskFragment" />
    </fragment>
</navigation>