<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Task" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/colorGrey</item>
        <item name="colorOnPrimary">@color/colorGrey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorGrey</item>
        <item name="colorOnSecondary">@color/colorPrimary</item>

        <!-- art -->
        <item name="android:colorBackground">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimaryContainer">#D51D1D</item>
        <item name="colorOnPrimaryContainer">@color/colorAccent</item>
        <item name="colorOnPrimarySurface">@color/colorPrimary</item>
        <item name="colorOnBackground">#7D2E40</item>
        <item name="colorOnSurface">@color/colorGrey</item>



    </style>

    <style name="MyToolbar" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:textColor">@color/white</item>

    </style>
</resources>