<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Task" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ic_launcher_background</item>
        <item name="colorPrimaryVariant">@color/ic_launcher_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/seconde</item>
        <item name="colorSecondaryVariant">@color/colorGrey</item>
        <item name="colorOnSecondary">@color/colorPrimary</item>

        <!-- art -->
        <item name="android:colorBackground">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>




    </style>

    <style name="MyToolbar" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:textColor">@color/white</item>

    </style>
</resources>